{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": true,
    "strict": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "out/server"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/client/"
  ]
}
